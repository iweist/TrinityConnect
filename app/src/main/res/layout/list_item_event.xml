<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <TextView
        android:id="@+id/list_item_event_title_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:padding="4dp"
        tools:text="Event Title "/>

    <TextView
        android:id="@+id/list_item_event_descript_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/list_item_event_title_text_view"
        android:padding="4dp"
        tools:text="Description "/>

    <TextView

        android:id="@+id/list_item_event_loc_text_view"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/list_item_event_descript_text_view"
        android:padding="4dp"
        tools:text="Description "/>

    <TextView
        android:id="@+id/list_item_event_date_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/list_item_event_loc_text_view"
        android:padding="4dp"
        tools:text="Date "/>

    <TextView
        android:id="@+id/list_item_event_time_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/list_item_event_date_text_view"
        android:padding="4dp"
        tools:text="Time"/>


</RelativeLayout>